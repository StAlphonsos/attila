# -*- makefile -*-
#

DOTFILES?=Xdefaults xinitrc xmodmaprc
DOTDIRS?=config

default: all

all::

all clean distclean:

install: all
	@(for f in $(DOTFILES); do $(FAKE) $(INSTALL) $$f $(DOTDIR)/.$$f; done)
	@(for d in $(DOTDIRS); do $(FAKE) $(TAR) cf - $$d | (cd $(DOTDIR); $(TAR) xvf -); done)

uninstall:
	@echo No uninstall for x11-desktop
