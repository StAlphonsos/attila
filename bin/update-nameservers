#!/bin/sh
# 
# Replacement for standard openvpn resolvconf-based
# script on platforms where there is no resolvconf,
# e.g. OpenBSD.
#
# Use as up/down scripts in client.conf:
# up /path/to/update-nameservers
# down /path/to/update-nameservers
## !!

TMPDIR=${TMPDIR-/tmp}
BAKDIR=${BAKDIR-$TMPDIR}

case $script_type in

up)
    for optionname in "${foreign_option_1-}" "${foreign_option_2-}" "${foreign_option_3-}" "${foreign_option_4-}" ; do
		option="${optionname}"
		echo $option
		part1=$(echo "$option" | cut -d " " -f 1)
		if [ "$part1" == "dhcp-option" ] ; then
			part2=$(echo "$option" | cut -d " " -f 2)
			part3=$(echo "$option" | cut -d " " -f 3)
			if [ "$part2" == "DNS" ] ; then
				IF_DNS_NAMESERVERS="$IF_DNS_NAMESERVERS $part3"
			fi
			if [ "$part2" == "DOMAIN" ] ; then
				IF_DNS_SEARCH="$IF_DNS_SEARCH $part3"
			fi
		fi
	done
	R=""
	for SS in $IF_DNS_SEARCH ; do
        	R="${R}search $SS
"
	done
	for NS in $IF_DNS_NAMESERVERS ; do
        	R="${R}nameserver $NS
"
	done

	## swizzle configs

	TMPFILE=${TMPDIR-/tmp}/update-nameservers.$$
	NEWCONF=${TMPDIR-/tmp}/resolv.conf.$$
	NEWTAIL=${TMPDIR-/tmp}/resolv.conf.tail.$$
	OLDCONF=${BAKDIR}/resolv.conf.b
	OLDTAIL=${BAKDIR}/resolv.conf.tail.b

	[ ! -f $OLDTAIL ] && {
	    touch $OLDTAIL
	    [ -f /etc/resolv.conf.tail ] && \
		cat /etc/resolv.conf.tail >> $OLDTAIL
	}
	echo '# generated by update-nameservers' > $TMPFILE
	echo "$R" >> $TMPFILE

	cp $TMPFILE $NEWCONF
	[ -f /etc/resolv.conf ] && cat /etc/resolv.conf >> $NEWCONF

	[ -f /etc/resolv.conf.tail ] && cat /etc/resolv.conf.tail >> $NEWTAIL
	cat $TMPFILE >> $NEWTAIL
	
	[ -f /etc/resolv.conf ] && cp /etc/resolv.conf $OLDCONF
	[ -f /etc/resolv.conf.tail ] && cp /etc/resolv.conf.tail $OLDTAIL

	cp $NEWCONF /etc/resolv.conf
	cp $NEWTAIL /etc/resolv.conf.tail

	#echo -n "$R" | /sbin/resolvconf -a "${dev}.inet"
	;;
down)
	OLDCONF=${BAKDIR}/resolv.conf
	OLDTAIL=${BAKDIR}/resolv.conf.tail

	[ -f $OLDCONF ] && cp $OLDCONF /etc/resolv.conf
	[ -f $OLDTAIL ] && cp $OLDTAIL /etc/resolv.conf.tail

	#/sbin/resolvconf -d "${dev}.inet"
	;;
esac
